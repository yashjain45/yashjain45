n=int(input("Enter a number ="))
for i in range(1,n):
    for k in range(1,2*i):
        print(" ",end=" ")
    for j in range(i,n+1):
        print("*",end=" ")
    print()
for i in range(n,0,-1):
    for k in range(1,2*i):
        print(" ",end=" ")
    for j in range(i,n+1):
        print("*",end=" ")
    print()
               
